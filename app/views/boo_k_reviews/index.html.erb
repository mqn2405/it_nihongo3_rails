<p id="notice"><%= notice %></p>

<h1>Boo K Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boo_k_reviews.each do |boo_k_review| %>
      <tr>
        <td><%= boo_k_review.user_id %></td>
        <td><%= boo_k_review.book_id %></td>
        <td><%= boo_k_review.review %></td>
        <td><%= link_to 'Show', boo_k_review %></td>
        <td><%= link_to 'Edit', edit_boo_k_review_path(boo_k_review) %></td>
        <td><%= link_to 'Destroy', boo_k_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Boo K Review', new_boo_k_review_path %>
